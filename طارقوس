<script>
  // إعادة ترقيم الصفوف
  function renumber(){
    document.querySelectorAll('#peopleTable tbody tr .index').forEach((td, i)=> td.textContent = i+1);
  }
  function addRow(){
    const tbody = document.querySelector('#peopleTable tbody');
    const tr = document.createElement('tr');
    tr.innerHTML = `
      <td class="index"></td>
      <td><input placeholder="الاسم الثلاثي" /></td>
      <td><input placeholder="مثال: 123456" /></td>
      <td><input placeholder="سعودي" /></td>
      <td><button class="btn danger" type="button" onclick="removeRow(this)">✕</button></td>
    `;
    tbody.appendChild(tr);
    renumber();
  }
  function removeRow(btn){
    const tr = btn.closest('tr');
    tr.parentNode.removeChild(tr);
    renumber();
  }
  function toSafe(value){ return (value || "").trim(); }
  function formatDate(val){
    if(!val) return "";
    try{
      const d = new Date(val);
      const yyyy = d.getFullYear();
      const mm = String(d.getMonth()+1).padStart(2,'0');
      const dd = String(d.getDate()).padStart(2,'0');
      return `${dd}/${mm}/${yyyy}`;
    }catch(e){ return val; }
  }

  // تحميل صورة القالب واستخدامها كخلفية
  const tplFile = document.getElementById('tplFile');
  const tplToggle = document.getElementById('tplToggle');
  const page = document.getElementById('page');
  let tplDataUrl = null;

  tplFile.addEventListener('change', (e)=>{
    const file = e.target.files && e.target.files[0];
    if(!file) return;
    const reader = new FileReader();
    reader.onload = ()=>{
      tplDataUrl = reader.result;
      if(tplToggle.checked){
        page.style.backgroundImage = `url('${tplDataUrl}')`;
      }
    };
    reader.readAsDataURL(file);
  });

  tplToggle.addEventListener('change', ()=>{
    page.classList.toggle('template-on', tplToggle.checked);
    if(tplToggle.checked && tplDataUrl){
      page.style.backgroundImage = `url('${tplDataUrl}')`;
    }else{
      page.style.backgroundImage = 'none';
    }
  });

  function updatePreview(){
    // رأس الصفحة
    document.getElementById('orgOut').textContent = toSafe(document.getElementById('org').value);

    // جدول المكلفين
    const outBody = document.querySelector('#tableOut tbody');
    outBody.innerHTML = '';
    const rows = document.querySelectorAll('#peopleTable tbody tr');
    if(rows.length === 0){
      const tr = document.createElement('tr');
      tr.innerHTML = `<td>1</td><td>—</td><td>—</td><td>—</td>`;
      outBody.appendChild(tr);
    }else{
      rows.forEach((r, i)=>{
        const tds = r.querySelectorAll('td');
        const name = toSafe(tds[1].querySelector('input').value);
        const emp  = toSafe(tds[2].querySelector('input').value);
        const nat  = toSafe(tds[3].querySelector('input').value);
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${i+1}</td>
          <td>${name || '—'}</td>
          <td>${emp  || '—'}</td>
          <td>${nat  || '—'}</td>
        `;
        outBody.appendChild(tr);
      });
    }

    // نص الخطاب
    document.getElementById('destOut').textContent     = toSafe(document.getElementById('destination').value);
    document.getElementById('purposeOut').textContent   = toSafe(document.getElementById('purpose').value);
    document.getElementById('durationOut').textContent  = toSafe(document.getElementById('duration').value) ? toSafe(document.getElementById('duration').value) + ' يوم' : '';
    document.getElementById('startOut').textContent     = formatDate(document.getElementById('start').value);
    document.getElementById('endOut').textContent       = formatDate(document.getElementById('end').value);

    // ملاحظة أسفل الصفحة (يمين)
    const note = toSafe(document.getElementById('note').value);
    document.getElementById('noteOut').textContent = note;
  }

  // تحديث أولي
  updatePreview();

  // تحديث فوري عند التغيير
  document.querySelectorAll('.panel input, .panel textarea, .panel select').forEach(el=>{
    el.addEventListener('input', updatePreview);
    el.addEventListener('change', updatePreview);
  });
</script>

</body>

</html>
